{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "allowJs": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "api-utils": ["./src/utils/index.ts"],
            "api-controller": ["./src/controller/index.ts"],
            "api-middleware": ["./src/middleware/index.ts"],
            "api-service": ["./src/service/index.ts"],
            "api-repository": ["./src/repository/index.ts"],
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/*"],
    "exclude": ["node_modules"]
}
